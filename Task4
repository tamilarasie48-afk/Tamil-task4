<script>
function startListening() {
    const output = document.getElementById("output");

    if (!('webkitSpeechRecognition' in window)) {
        output.innerText = "Speech Recognition not supported";
        return;
    }

    const recognition = new webkitSpeechRecognition();
    recognition.lang = "en-US";
    recognition.start();

    recognition.onresult = function(event) {
        const command = event.results[0][0].transcript.toLowerCase();
        output.innerText = "You said: " + command;

        if (command.includes("turn on the lights")) {
            output.innerText = "üí° Lights turned ON";
        } 
        else if (command.includes("turn off the lights")) {
            output.innerText = "üí° Lights turned OFF";
        } 
        else if (command.includes("thermostat")) {
            const temp = command.match(/\d+/);
            if (temp) {
                output.innerText = "üå°Ô∏è Thermostat set to " + temp[0] + "¬∞C";
            } else {
                output.innerText = "Please specify temperature";
            }
        } 
        else {
            output.innerText = "‚ùå Command not recognized";
        }
    };

    recognition.onerror = function() {
        output.innerText = "Error listening. Try again.";
    };
}
</script>

